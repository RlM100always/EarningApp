<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/red"
    android:layout_height="match_parent"
    tools:context=".activity.AdsControlActivity">
    <TextView
        android:padding="15dp"
        android:elevation="5dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/back"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Ads Setup"
        android:backgroundTint="#0330F8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:elevation="10dp"
            android:foreground="@drawable/rip"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/telegram_id"
                android:foreground="@drawable/rip"
                android:gravity="center"
                android:background="@drawable/sw_back"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:shadowColor="@color/shadow"
                android:shadowDx=".5"
                android:shadowDy=".5"
                android:shadowRadius="1.5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start.io"
                android:textColor="@color/white"
                android:textSize="12dp"
                />


        </LinearLayout>
        <LinearLayout
            android:elevation="10dp"
            android:foreground="@drawable/rip"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:foreground="@drawable/rip"
                android:gravity="center"
                android:background="@drawable/sw_back"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:shadowColor="@color/shadow"
                android:shadowDx=".5"
                android:shadowDy=".5"
                android:shadowRadius="1.5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start APP"
                android:textColor="@color/white"
                android:textSize="12dp"
                />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:elevation="10dp"
            android:foreground="@drawable/rip"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:foreground="@drawable/rip"
                android:gravity="center"
                android:background="@drawable/sw_back"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:shadowColor="@color/shadow"
                android:shadowDx=".5"
                android:shadowDy=".5"
                android:shadowRadius="1.5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Applovin"
                android:textColor="@color/white"
                android:textSize="12dp"
                />


        </LinearLayout>
        <LinearLayout
            android:elevation="10dp"
            android:foreground="@drawable/rip"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:foreground="@drawable/rip"
                android:gravity="center"
                android:background="@drawable/sw_back"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:shadowColor="@color/shadow"
                android:shadowDx=".5"
                android:shadowDy=".5"
                android:shadowRadius="1.5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Colony"
                android:textColor="@color/white"
                android:textSize="12dp"
                />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:elevation="10dp"
            android:foreground="@drawable/rip"
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:foreground="@drawable/rip"
                android:gravity="center"
                android:background="@drawable/sw_back"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:shadowColor="@color/shadow"
                android:shadowDx=".5"
                android:shadowDy=".5"
                android:shadowRadius="1.5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website Visiting"
                android:textColor="@color/white"
                android:textSize="12dp"
                />


        </LinearLayout>
    </LinearLayout>






</LinearLayout>