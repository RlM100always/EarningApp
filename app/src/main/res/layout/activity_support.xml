<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/red"
    tools:context=".activity.service.SupportActivity">

    <ImageView
        android:layout_marginLeft="7dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/new_selfme"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <TextView
        android:textStyle="bold"
        android:layout_gravity="center"
        android:shadowColor="@color/shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius=".5"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:text="Contact us if any problem "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginBottom="20dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_width="100dp"
        android:layout_height="2.5dp"/>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:elevation="10dp"
            android:foreground="@drawable/rip"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/fb_id"
                android:foreground="@drawable/rip"
                android:gravity="center"
                android:background="@drawable/control_design"
                android:layout_width="90dp"
                android:layout_height="90dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:src="@drawable/facebook"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:shadowColor="@color/shadow"
                android:shadowDx=".5"
                android:shadowDy=".5"
                android:shadowRadius="1.5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textColor="@color/white"
                android:textSize="12dp"
                />


        </LinearLayout>
        <LinearLayout
            android:elevation="10dp"
            android:foreground="@drawable/rip"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/telegram_id"
                android:foreground="@drawable/rip"
                android:gravity="center"
                android:background="@drawable/control_design"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:src="@drawable/telegram"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:shadowColor="@color/shadow"
                android:shadowDx=".5"
                android:shadowDy=".5"
                android:shadowRadius="1.5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telegram"
                android:textColor="@color/white"
                android:textSize="12dp"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:elevation="10dp"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/contact_id"
            android:foreground="@drawable/rip"
            android:gravity="center"
            android:background="@drawable/control_design"
            android:layout_width="180dp"
            android:layout_height="90dp">
            <ImageView
                android:scaleType="centerCrop"
                android:padding="5dp"
                android:src="@drawable/baseline_contact_support_24"
                android:layout_width="70dp"
                android:layout_height="60dp"/>

        </LinearLayout>
        <TextView
            android:foreground="@drawable/rip"
            android:textStyle="bold"
            android:shadowColor="@color/shadow"
            android:shadowDx=".5"
            android:shadowDy=".5"
            android:shadowRadius="1.5"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textColor="@color/white"
            android:textSize="12dp"
            />


    </LinearLayout>




</LinearLayout>