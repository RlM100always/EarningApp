<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:backgroundTint="@color/red"
    android:layout_height="wrap_content">
    <LinearLayout
        android:elevation="4dp"
        android:background="@drawable/shpae"
        android:padding="8dp"
        android:foreground="@drawable/rip"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"

                android:textIsSelectable="true"
                android:id="@+id/all_text_set"
                android:layout_margin="5dp"
                android:textSize="16dp"
                android:text="1. 200 points /10 workers / date  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚫️ Status :"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:id="@+id/status_check_id"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:background="@drawable/sub_back"
                    android:foreground="@drawable/rip"
                    android:text="Pending"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>






    </LinearLayout>


</LinearLayout>