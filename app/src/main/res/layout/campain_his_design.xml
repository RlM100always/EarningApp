<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/red"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:elevation="4dp"
        android:padding="6dp"
        android:background="@drawable/shpae"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"

                android:id="@+id/count_id"
                android:text="Campaign Number : 1"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="5dp"

                android:id="@+id/total_worker_id"
                android:text="âœ” 50 Organic Traffic Neeeded"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:padding="1.6dp"
                    android:text="Status : "
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:id="@+id/complete_id"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_marginLeft="5dp"
                    android:padding="1dp"
                    android:id="@+id/status_id"
                    android:background="#64DD17"
                    android:text="  Running  "
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>