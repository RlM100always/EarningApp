<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".activity.loginandsignup.LoginActivity">
    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/sign_draw"
        android:layout_width="300dp"
        android:layout_height="150dp"/>


    <LinearLayout
        android:elevation="3dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/shpae"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="#0327F2"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="LOGIN ACCOUNT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:background="#0327F2"
            android:layout_width="100dp"
            android:layout_height="2.5dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:hint="Enter your email"
            android:layout_height="60dp">
            <com.google.android.material.textfield.TextInputEditText
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:id="@+id/login_email_id"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:hint="Enter your password"
            android:layout_height="60dp">
            <com.google.android.material.textfield.TextInputEditText
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/baseline_password_24"
                android:id="@+id/login_password_id"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:shadowColor="@color/shadow1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:id="@+id/login_button_click"
            android:shadowRadius="3"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#57C905"
            android:background="@drawable/sub_back"
            android:textSize="20dp"
            android:foreground="@drawable/rip"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Login"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:shadowColor="@color/shadow1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:id="@+id/login_signup_id"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#57C905"
            android:background="@drawable/sub_back"
            android:textSize="20dp"
            android:foreground="@drawable/rip"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Sign Up"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>




</LinearLayout>