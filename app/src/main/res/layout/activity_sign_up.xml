<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".activity.loginandsignup.SignUpActivity">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/new_selfme"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <LinearLayout
                android:elevation="3dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:layout_margin="20dp"
                android:background="@drawable/shpae"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#0327F2"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="CREATE AN ACCOUNT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_margin="3dp"
                    android:layout_gravity="center"
                    android:background="#0327F2"
                    android:layout_width="100dp"
                    android:layout_height="2.5dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:hint="Enter your name"
                    android:layout_height="60dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/profile"
                        android:id="@+id/signup_name_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:hint="Enter your email"
                    android:layout_height="60dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:drawableLeft="@drawable/baseline_email_24"
                        android:id="@+id/signup_email_id"
                        android:drawablePadding="5dp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:hint="Enter your password"
                    android:layout_height="60dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/baseline_password_24"
                        android:inputType="textPassword"
                        android:id="@+id/signup_password_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:foreground="@drawable/rip"
                    android:id="@+id/already_sign_up"
                    android:textColor="@color/black"
                    android:layout_margin="15dp"
                    android:textSize="14dp"
                    android:text="!! Already Sign up.."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:shadowColor="@color/shadow1"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#57C905"
                    android:background="@drawable/sub_back"
                    android:textSize="20dp"
                    android:foreground="@drawable/rip"
                    android:textStyle="bold"
                    android:id="@+id/sign_button_click"
                    android:layout_gravity="center"
                    android:text="Sign Up"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>




</LinearLayout>