<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/reward"
        android:layout_width="60dp"
        android:layout_height="65dp"/>
    <TextView
        android:letterSpacing=".05"
        android:textColor="#00C853"
        android:layout_marginTop="6dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="✔ Congratulations!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:letterSpacing=".02"
        android:textColor="#1F2120"
        android:layout_gravity="center_horizontal"
        android:textSize="14dp"
        android:text="✔ Task Completed Successfully , Click Connect bonus to receive your bonus!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/collect_id"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#49B304"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@drawable/sw_back"
        android:letterSpacing=".01"
        android:textColor="@color/white"
        android:layout_marginTop="6dp"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="✔ Collect Bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>